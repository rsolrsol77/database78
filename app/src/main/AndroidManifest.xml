<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.demo.database78">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.demo.database78.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Database78"
        tools:targetApi="31">
        <activity
            android:name="com.demo.database78.TopSellingProductsActivity"
            android:exported="false" />
        <activity
            android:name="com.demo.database78.RevenueAnalysisActivity"
            android:exported="false" />
        <activity
            android:name="com.demo.database78.VerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.demo.database78.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.demo.database78.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.demo.database78.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.demo.database78.FilterTotalAccountUpdatesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
