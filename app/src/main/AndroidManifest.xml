            android:name="com.demo.database78.TotalAccountUpdatesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.demo.database78.SalesFragment"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.demo.database78.SalesEditActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.demo.database78.edit"
            android:exported="false"
            android:screenOrientation="portrait" /> <!-- MainActivity سيتم الانتقال إليه بعد شاشة الترحيب -->
